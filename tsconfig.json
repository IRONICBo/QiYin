{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "types": ["vite/client"],
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*.ts", 
      "src/**/*.tsx", 
      "src/**/*.vue", 
      "tests/**/*.ts", 
      "tests/**/*.tsx", 
      "src/**/*.d.ts", 
      "src/types/**/*.d.ts"
    ],
  }